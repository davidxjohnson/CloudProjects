{
  "name": "cloud-projects",
  "version": "1.0.0",
  "description": "Professional TypeScript cloud development portfolio showcasing AWS CDK infrastructure, DevOps automation, and production-ready code patterns",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test --coverage",
    "merge-coverage": "npx lcov-result-merger '**/coverage/lcov.info' > coverage/lcov.info",
    "lint": "./lint.sh",
    "clean": "pnpm -r exec rm -rf dist lib node_modules",
    "install:all": "pnpm install"
  },
  "keywords": [
    "aws",
    "cdk",
    "typescript",
    "kubernetes",
    "infrastructure",
    "devops",
    "cloud-engineering",
    "automation",
    "portfolio",
    "senior-developer",
    "aws-sdk",
    "testing",
    "ci-cd"
  ],
  "author": "David Johnson",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=8.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@aws-cdk/lambda-layer-kubectl-v33": "2.0.0",
    "aws-cdk-lib": "2.219.0",
    "commander": "13.1.0",
    "constructs": "10.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@kubernetes/client-node": "1.4.0",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "lcov-result-merger": "5.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}