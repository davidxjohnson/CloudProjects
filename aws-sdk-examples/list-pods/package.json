{
  "name": "@cloud-projects/list-pods-example",
  "version": "1.0.0",
  "description": "TypeScript example for listing Kubernetes pods",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.19.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "start": "node dist/list-pods.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@kubernetes/client-node": "1.4.0",
    "commander": "13.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@typescript-eslint/parser": "8.46.1",
    "@vitest/coverage-v8": "2.1.9",
    "@vitest/ui": "2.1.9",
    "typescript": "5.9.3",
    "vitest": "2.1.9"
  }
}